<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_all_exercises_to_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AllExercisesToAddToListFragment"
    android:background="@color/ic_training_weaver_bg_lighter">

    <!-- אותה פריסת Recycler כמו במסך ה־DB, רק עם ה-ID שלך -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAllExercises"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:padding="16dp" />

    <!-- כותרת למעלה כמו במסך ה־DB -->
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="All Exercises"
        android:textSize="20sp" />

</FrameLayout>
